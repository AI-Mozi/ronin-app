<% content_for :breadcrumbs  do %>
<nav class="breadcrumb" aria-label="breadcrumbs">
  <ul>
    <li><a href="/">Home</a></li>
    <li><a href="/db">Database</a></li>
  </ul>
</nav>
<% end %>

<div class="is-flex is-justify-content-space-between">
  <h1>Host names</h1>
  <%= partial(:delete_all, path: "host_names") %>
</div>

<form action="/db/host_names/import" method="post" class="mb-5">
  <div class="field has-addons">
    <div class="mr-1">
      <input class="input" name="host_name" placeholder="example.com"></input>
    </div>
    <div>
      <button type="submit" class="button is-primary">Import</button>
    </div>
  </div>
</form>

<% @host_names.each do |host_name| %>
  <p><a href="/db/host_names/<%=h host_name.id %>"><%=h host_name %></a></p>
<% end %>

<%= partial(:pagination, pagy: @pagy) %>
