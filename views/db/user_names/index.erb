<% content_for :breadcrumbs  do %>
<nav class="breadcrumb" aria-label="breadcrumbs">
  <ul>
    <li><a href="/">Home</a></li>
    <li><a href="/db">Database</a></li>
  </ul>
</nav>
<% end %>

<div class="is-flex is-justify-content-space-between">
  <h1>User Names</h1>
  <%= partial(:delete_all, path: "user_names") %>
</div>

<form action="/db/user_names/import" method="post" class="mb-5">
  <div class="field has-addons">
    <div class="mr-1">
      <input class="input" name="user_name" placeholder="foobar"></input>
    </div>
    <div>
      <button type="submit" class="button is-primary">Import</button>
    </div>
  </div>
</form>

<% @user_names.each do |user_name| %>
  <p><a href="/db/user_names/<%=h user_name.id %>"><%=h user_name %></a></p>
<% end %>

<%= partial(:pagination, pagy: @pagy) %>
