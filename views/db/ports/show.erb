<% content_for :breadcrumbs  do %>
<nav class="breadcrumb" aria-label="breadcrumbs">
  <ul>
    <li><a href="/">Home</a></li>
    <li><a href="/db">Database</a></li>
    <li><a href="/db/ports">Ports</a></li>
  </ul>
</nav>
<% end %>

<div class="is-flex is-justify-content-space-between">
  <h1>Port: <%=h @port %></h1>
  <%= partial(:delete, record: @port, path: "ports") %>
</div>

<table class="table">
  <tbody>
    <tr>
      <td><strong>Protocol:</strong></td>
      <td><%=h @port.protocol.upcase %></td>
    </tr>

    <tr>
      <td><strong>Number:</strong></td>
      <td><%=h @port.number %></td>
    </tr>

    <tr>
      <td><strong>IP Addresses:</strong></td>
      <td>
        <% @port.ip_addresses.each do |ip_address| %>
          <p>
            <a href="/db/ip_addresses/<%=h ip_address.id %>">
              <%=h ip_address %>
            </a>
          </p>
        <% end %>
      </td>
    </tr>

    <tr>
      <td><strong>Open Ports:</strong></td>
      <td>
        <% @port.open_ports.each do |open_port| %>
          <p>
            <a href="/db/open_ports/<%=h open_port.id %>">
              <%=h open_port.ip_address %> <%=h open_port %>
            </a>
          </p>
        <% end %>
      </td>
    </tr>

    <tr>
      <td><strong>Services:</strong></td>
      <td>
        <% @port.services.each do |service| %>
          <p>
            <a href="/db/services/<%=h service.id %>">
              <%=h service %>
            </a>
          </p>
        <% end %>
      </td>
    </tr>
  </tbody>
</table>

<%= partial(:notes, notes: @port.notes) %>

