<% content_for :breadcrumbs  do %>
<nav class="breadcrumb" aria-label="breadcrumbs">
  <ul>
    <li><a href="/">Home</a></li>
    <li><a href="/db">Database</a></li>
  </ul>
</nav>
<% end %>

<div class="is-flex is-justify-content-space-between">
  <h1>URLs</h1>
  <%= partial(:delete_all, path: "urls") %>
</div>

<form action="/db/urls/import" method="post" class="mb-5">
  <div class="field has-addons">
    <div class="mr-1">
      <input class="input" name="url" placeholder="http://example.com/"></input>
    </div>
    <div>
      <button type="submit" class="button is-primary">Import</button>
    </div>
  </div>
</form>

<% @urls.each do |url| %>
  <p><a href="/db/urls/<%=h url.id %>"><%=h url %></a></p>
<% end %>

<%= partial(:pagination, pagy: @pagy) %>
