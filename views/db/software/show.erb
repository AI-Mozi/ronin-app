<% content_for :breadcrumbs  do %>
<nav class="breadcrumb" aria-label="breadcrumbs">
  <ul>
    <li><a href="/">Home</a></li>
    <li><a href="/db">Database</a></li>
    <li><a href="/db/software">Software</a></li>
  </ul>
</nav>
<% end %>

<div class="is-flex is-justify-content-space-between">
  <h1>Software: <%=h @software %></h1>
  <%= partial(:delete, record: @software, path: "software") %>
</div>

<table class="table">
  <tbody>
    <tr>
      <td><strong>Name:</strong></td>
      <td><%=h @software.name %></td>
    </tr>

    <tr>
      <td><strong>Version:</strong></td>
      <td><%=h @software.version %></td>
    </tr>

    <tr>
      <td><strong>Vendor:</strong></td>
      <td>
        <% if @software.vendor %>
          <a href="/db/software_vendors/<%=h @software.vendor.id %>">
            <%=h @software.vendor %>
          </a>
        <% end %>
      </td>
    </tr>

    <tr>
      <td><strong>Open Ports:</strong></td>
      <td>
        <% @software.open_ports.each do |open_port| %>
          <p>
            <a href="/db/open_ports/<%=h open_port.id %>">
              <%=h open_port %>
            </a>
          </p>
        <% end %>
      </td>
    </tr>
  </tbody>
</table>
