<% content_for :breadcrumbs  do %>
  <nav class="breadcrumb" aria-label="breadcrumbs">
    <ul>
      <li><a href="/">Home</a></li>
      <li><a href="/db">Database</a></li>
    </ul>
  </nav>
<% end %>

<div class="is-flex is-justify-content-space-between">
  <h1>Passwords</h1>
  <%= partial(:delete_all, path: "passwords") %>
</div>

<form action="/db/passwords/import" method="post" class="mb-5">
  <div class="field has-addons">
    <div class="mr-1">
      <input class="input" name="password" placeholder="password"></input>
    </div>
    <div>
      <button type="submit" class="button is-primary">Import</button>
    </div>
  </div>
</form>

<% @passwords.each do |password| %>
  <p><a href="/db/passwords/<%=h password.id %>"><%=h password %></a></p>
<% end %>

<%= partial(:pagination, pagy: @pagy) %>
