<% content_for :breadcrumbs  do %>
<nav class="breadcrumb" aria-label="breadcrumbs">
  <ul>
    <li><a href="/">Home</a></li>
    <li><a href="/db">Database</a></li>
  </ul>
</nav>
<% end %>

<div class="is-flex is-justify-content-space-between">
  <h1>Credentials</h1>
  <%= partial(:delete_all, path: "credentials") %>
</div>

<form action="/db/credentials/import" method="post" class="mb-5">
  <div class="field has-addons">
    <div class="mr-1">
      <input class="input" name="cred" placeholder="user@example.com:password"></input>
    </div>
    <div>
      <button type="submit" class="button is-primary">Import</button>
    </div>
  </div>
</form>

<% @credentials.each do |credential| %>
  <p><a href="/db/credentials/<%=h credential.id %>"><%=h credential %></a></p>
<% end %>

<%= partial(:pagination, pagy: @pagy) %>
