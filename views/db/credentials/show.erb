<% content_for :breadcrumbs  do %>
<nav class="breadcrumb" aria-label="breadcrumbs">
  <ul>
    <li><a href="/">Home</a></li>
    <li><a href="/db">Database</a></li>
    <li><a href="/db/credentials">Credentials</a></li>
  </ul>
</nav>
<% end %>

<div class="is-flex is-justify-content-space-between">
  <h1>Credential: <%=h @password %></h1>
  <%= partial(:delete, record: @password, path: "credentials") %>
</div>

<table class="table">
  <tbody>
    <tr>
      <td><strong>User Name:</strong></td>
      <td>
        <% if @credential.user_name %>
          <a href="/db/user_names/<%=h @credential.user_name.id %>">
            <%=h @credential.user_name %>
          </a>
        <% end %>
      </td>
    </tr>

    <tr>
      <td><strong>Email Address:</strong></td>
      <td>
        <% if @credential.email_address %>
          <a href="/db/email_address/<%=h @credential.email_address.id %>">
            <%=h @credential.user_name %>
          </a>
        <% end %>
      </td>
    </tr>

    <tr>
      <td><strong>Password:</strong></td>
      <td>
        <a href="/db/passwords/<%=h @credential.password.id %>">
          <%=h @credential.password %>
        </a>
      </td>
    </tr>
  </tbody>
</table>

<%= partial(:notes, notes: @credential.notes) %>
