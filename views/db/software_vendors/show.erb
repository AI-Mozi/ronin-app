<% content_for :breadcrumbs  do %>
<nav class="breadcrumb" aria-label="breadcrumbs">
  <ul>
    <li><a href="/">Home</a></li>
    <li><a href="/db">Database</a></li>
    <li><a href="/db/software">Software</a></li>
  </ul>
</nav>
<% end %>

<div class="is-flex is-justify-content-space-between">
  <h1>Software Vendor: <%=h @software_vendor %></h1>
  <%= partial(:delete, record: @software_vendor, path: "software_vendors") %>
</div>

<table class="table">
  <tbody>
    <tr>
      <td><strong>Name:</strong></td>
      <td><%=h @software_vendor.name %></td>
    </tr>

    <tr>
      <td><strong>Software:</strong></td>
      <td>
        <% @software_vendor.software.each do |software| %>
          <p>
            <a href="/db/software/<%=h software.id %>">
              <%=h software %>
            </a>
          </p>
        <% end %>
      </td>
    </tr>
  </tbody>
</table>
