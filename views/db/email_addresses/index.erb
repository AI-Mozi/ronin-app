<% content_for :breadcrumbs  do %>
<nav class="breadcrumb" aria-label="breadcrumbs">
  <ul>
    <li><a href="/">Home</a></li>
    <li><a href="/db">Database</a></li>
  </ul>
</nav>
<% end %>

<div class="is-flex is-justify-content-space-between">
  <h1>Email Addresses</h1>
  <%= partial(:delete_all, path: "email_addresses") %>
</div>

<form action="/db/email_addresses/import" method="post" class="mb-5">
  <div class="field has-addons">
    <div class="mr-1">
      <input class="input" name="email_address" placeholder="example@domain.com"></input>
    </div>
    <div>
      <button type="submit" class="button is-primary">Import</button>
    </div>
  </div>
</form>

<% @email_addresses.each do |email_address| %>
  <p><a href="/db/email_addresses/<%=h email_address.id %>"><%=h email_address %></a></p>
<% end %>

<%= partial(:pagination, pagy: @pagy) %>
