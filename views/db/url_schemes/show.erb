<% content_for :breadcrumbs  do %>
<nav class="breadcrumb" aria-label="breadcrumbs">
  <ul>
    <li><a href="/">Home</a></li>
    <li><a href="/db">Database</a></li>
    <li><a href="/db/url_schemes">URL Schemes</a></li>
  </ul>
</nav>
<% end %>

<div class="is-flex is-justify-content-space-between">
  <h1>URL Scheme: <%=h @url_scheme %></h1>
  <%= partial(:delete, record: @url_scheme, path: "url_schemes") %>
</div>

<table class="table">
  <tbody>
    <tr>
      <td><strong>Name:</strong></td>
      <td><%=h @url_scheme.name %></td>
    </tr>

    <tr>
      <td><strong>URLs:</strong></td>
      <td>
        <% @url_scheme.urls.each do |url| %>
          <p>
            <a href="/db/urls/<%=h url.id %>">
              <%=h url %>
            </a>
          </p>
        <% end %>
      </td>
    </tr>
  </tbody>
</table>
